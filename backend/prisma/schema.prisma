generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  walletAddress String
  signature     String @unique
  amount        Float
  pool          Pool[]
  // bet           Bet[] //changed //Fck It, I will make one more DB call only
}

