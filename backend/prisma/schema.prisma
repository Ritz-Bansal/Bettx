model Pool {
  id         String @id @default(uuid())
  contest    String @unique
  totalMoney Int
  userId     String
  user       User   @relation(fields: [userId], references: [id])
}


model Participants{
  id          String @id @default(uuid())
  multiplier  Int
  VJudgeUserName  String @unique
  
}
